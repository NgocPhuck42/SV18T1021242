@model SV18T1021242.DomainModel.Supplier
@{

}

<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/supplier/save" method="post">
            <input type="hidden" name="SupplierID" value="@Model.SupplierID" />

            <div class="form-group">
                <label class="control-label col-sm-2">Tên Nhà Cung Cấp</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="SupplierName" autofocus value="@Model.SupplierName">
                    @Html.ValidationMessageFor(e => e.SupplierName, "", new { @style = "color:#ff0000" });

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Giao Dịch</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="ContactName" value="@Model.ContactName">
                    @Html.ValidationMessageFor(e => e.ContactName, "", new { @style = "color:#ff0000" });
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Địa Chỉ</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Address" value="@Model.Address">
                    @Html.ValidationMessageFor(e => e.Address, "", new { @style = "color:#ff0000" });
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Quốc gia</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(c => c.Country, SelectListHelper.Countries(), new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => c.Country, "", new { @style = "color:#ff0000" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Thành Phố</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="City"
                           name="City" value="@Model.City">
                    @Html.ValidationMessageFor(e => e.City, "", new { @style = "color:#ff0000" });

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mã Bưu chính</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="PostalCode"
                           name="PostalCode" value="@Model.PostalCode">
                    @Html.ValidationMessageFor(e => e.PostalCode, "", new { @style = "color:#ff0000" });

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="Phone"
                           name="Phone" value="@Model.Phone">
                    @Html.ValidationMessageFor(e => e.Phone, "", new { @style = "color:#ff0000" });
                </div>
            </div>     
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save" style="margin-right:5px"></i>Lưu dữ liệu</button>
                    <a href="~/supplier" class="btn btn-default"><i class="fa fa-chevron-left" style="margin-right:5px"></i>Quay lại</a>
                </div>
            </div>
        </form>
    </div>

</div>


