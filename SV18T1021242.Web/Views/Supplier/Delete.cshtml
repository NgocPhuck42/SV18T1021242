@model SV18T1021242.DomainModel.Supplier
@{
    ViewBag.Title = "Xóa nhà cung cấp";
}

<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/supplier/delete/@Model.SupplierID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Nhà Cung Cấp</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.SupplierName</p>

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Giao Dịch</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ContactName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Địa Chỉ</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.City</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Quốc gia</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Country</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Thành Phố</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.City</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mã Bưu chính</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.PostalCode</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Phone</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (SV18T1021242.BusinessLayer.CommonDataService.InSupplier(Model.SupplierID))
                    {
                    <p class="text-warning">Không được xóa nhà cung cấp này</p>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger"><i class="fa fa-trash" style="margin-right:5px"></i>Đồng ý xóa</button>
                    }
                        <a href="~/supplier" class="btn btn-default"><i class="fa fa-chevron-left" style="margin-right:5px"></i>Quay lại</a>
                    </div>
            </div>
        </form>
    </div>

</div>



