@model SV18T1021242.DomainModel.Employee
@{
    ViewBag.Title = "Xóa Nhân Viên";
}

<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/employee/delete/@Model.EmployeeID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.FullName</p>

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ngày Sinh</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.BirthDate.ToString("dd-MM-yyyy")</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ghi chú</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Notes</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Avata</label>
                <div class="col-sm-10">
                    <img src="@Model.Photo"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (SV18T1021242.BusinessLayer.CommonDataService.InEmployee(Model.EmployeeID))
                    {
                    <p class="text-warning">Không được xóa nhân viên này</p>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger"><i class="fa fa-trash" style="margin-right:5px"></i>Đồng ý xóa</button>
                    }
                    <a href="~/employee" class="btn btn-default"><i class="fa fa-chevron-left" style="margin-right:5px"></i>Quay lại</a>
                </div>
            </div>
        </form>
    </div>

</div>

