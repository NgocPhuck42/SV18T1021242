
@{
    ViewBag.Title = "Nhân viên";
}

<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form action="#" method="get">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Nhập tên nhân viên cấp cần tìm....">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat btn-info">
                        <i class="fa fa-search"></i>
                    </button>

                    <a href="~/employee/create" class="btn btn-flat btn-primary" style="margin-left:10px">
                        <i class="fa fa-plus">

                        </i>
                        Bổ sung
                    </a>
                </span>
            </div>
        </form>
        <p style="margin-top:10px">
            Có <b>1,505</b> nhân viên trong tổng số <strong>100</strong> trang
        </p>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr class="bg-blue-gradient">
                        <th>AVATA</th>
                        <th>Họ Nhân Viên</th>
                        <th>Tên Nhân Viên</th>
                        <th>Ngày Sinh</th>
                        <th>Email</th>
                        <th>Ghi chú</th>
                        <th style="width: 110px"></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 10; i++)
                    {
                        <tr>
                            <td><img src="~/Themes/dist/img/mua.jpg" style="width:60px; height:60px"/></td>
                            <td>Trương Đặng Ngọc</td>
                            <td>Phúc</td>
                            <td>23/04/2000</td>
                            <td>tdnphuck42@gmai.com</td>
                            <td>Là 1 developer</td>            
                            <td>
                                <a href="~/employee/edit/123" class="btn btn-info"><i class="fa fa-edit"></i></a>
                                <a href="~/employee/delete/123" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>
    </div>
    <div class="box-footer">
        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">1</a></li>
                <li class="active"><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>
    </div>
</div>


