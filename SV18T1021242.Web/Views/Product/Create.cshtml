@model SV18T1021242.DomainModel.Product
@{
    ViewBag.Title = "Bổ sung mặt hàng";
}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/product/save" method="post" enctype="multipart/form-data">
            <input type="hidden" name="CustomerID" value="@Model.ProductID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="ProductName" autofocus value="@Model.ProductName">
                    @Html.ValidationMessageFor(e => e.ProductName, "", new { @style = "color:#ff0000" });
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Loại hàng</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.CategoryID, SelectListHelper.Categories(), new { @class = "form-control select2" })
                    @Html.ValidationMessageFor(c => c.CategoryID, "", new { @style = "color:#ff0000" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Nhà cung cấp</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.SupplierID, SelectListHelper.Suppliers(), new { @class = "form-control select2" })
                    @Html.ValidationMessageFor(c => c.SupplierID, "", new { @style = "color:#ff0000" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Unit" value="@Model.Unit">
                    @Html.ValidationMessageFor(e => e.Unit, "", new { @style = "color:#ff0000" });
                </div>

            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Price" value="@Model.Price" />
                    @Html.ValidationMessageFor(e => e.Price, "", new { @style = "color:#ff0000" }) ;
                </div>

            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh họa:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                    @*@Html.ValidationMessageFor(e => e.Photo, "", new { @style = "color:#ff0000" }) ;*@

                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="Photo" value="@Model.Photo" />
                    <img id="Photo" src="~/@Model.Photo" class="img img-bordered" style="width:200px" />
                    @Html.ValidationMessageFor(e => e.Photo, "", new { @style = "color:#ff0000" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/product">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>


