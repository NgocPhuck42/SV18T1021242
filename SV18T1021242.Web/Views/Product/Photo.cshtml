@model SV18T1021242.DomainModel.ProductPhoto
@{

}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/product/savephoto" method="post" enctype="multipart/form-data">
            <input type="hidden" name="titlePage" value="@ViewBag.Title" />
            @Html.HiddenFor(p=> p.PhotoID)
            @Html.HiddenFor(p=>p.ProductID)
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="Photo" value="@Model.Photo" />
                    <img id="Photo" src="~/@Model.Photo" class="img img-bordered" style="width:200px" />
                    @Html.ValidationMessageFor(e => e.Photo, "", new { @style = "color:#ff0000" });
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Description" value="@Model.Description" autofocus>
                    @Html.ValidationMessageFor(e => e.Description, "", new { @style = "color:#ff0000" });

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="DisplayOrder" value="@Model.DisplayOrder" autofocus>
                    @Html.ValidationMessageFor(e => e.DisplayOrder, "", new { @style = "color:#ff0000" });

                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10 checkbox">
                    <label><input type="checkbox" name="IsHidden" value="true">Ẩn ảnh (không hiển thị với khách hàng)</label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/product/edit/@Model.ProductID">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>

