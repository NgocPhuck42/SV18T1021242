@model SV18T1021242.Web.Models.CategoryPaginationResult
@{
    ViewBag.Title = "Loại hàng";
}

<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form action="~/category" method="get">
            <div class="input-group">
                <input type="text" class="form-control" name="searchValue" placeholder="Nhập tên loại hàng cần tìm...." autofocus value="@Model.SearchValue">
                <span class="input-group-btn">
                    <button type="submit" id="search-btn" class="btn btn-flat btn-info">
                        <i class="fa fa-search"></i>
                    </button>

                    <a href="~/category/create" class="btn btn-flat btn-primary" style="margin-left:10px">
                        <i class="fa fa-plus">

                        </i>
                        Bổ sung
                    </a>
                </span>
            </div>
        </form>
        <p style="margin-top:10px">
            Có <b>@Model.RowCount</b> loại hàng trong tổng số <strong>@Model.PageCount</strong> trang
        </p>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr class="bg-blue-gradient">
                        <th>Tên Loại Hàng</th>
                        <th>Miêu Tả</th>
                        <th style="width: 110px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>@item.CategoryName</td>
                            <td>@item.Description</td>
                            <td>

                                <a href="~/category/edit/@item.CategoryID" class="btn btn-info"><i class="fa fa-edit"></i></a>
                                <a href="~/category/delete/@item.CategoryID" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>
    </div>
    <div class="box-footer">
        <div class="text-center">
            <ul class="pagination">
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (i == Model.Page)
                    {
                        <li class="active"><a href="~/category">@i</a></li>
                    }
                    else
                    {
                        <li><a href="~/category?page=@i&searchValue=@Model.SearchValue">@i</a></li>
                    }
                }
            </ul>
        </div>
    </div>
</div>

