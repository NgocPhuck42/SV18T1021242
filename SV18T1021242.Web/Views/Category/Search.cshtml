@model SV18T1021242.Web.Models.CategoryPaginationResult
@{
    Layout = null;
}

<p style="margin-top:10px">
    Có <b>@Model.RowCount</b> loại hàng trong tổng số <strong>@Model.PageCount</strong> trang
</p>
<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr class="bg-blue-gradient">
                <th>Tên Loại Hàng</th>
                <th>Miêu Tả</th>
                <th style="width: 110px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td>

                        <a href="~/category/edit/@item.CategoryID" class="btn btn-info"><i class="fa fa-edit"></i></a>
                        <a href="~/category/delete/@item.CategoryID" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>

            }

        </tbody>
    </table>
</div>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }
    </ul>
</div>
