@model SV18T1021242.DomainModel.Shipper
@{
    
}

<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/shipper/save" method="post">
            <input type="hidden" name="ShipperID" value="@Model.ShipperID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Người Giao Hàng</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(c => c.ShipperName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => c.ShipperName)

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(c => c.Phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => c.Phone)
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10 text-danger">
                    @Html.ValidationSummary()
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save" style="margin-right:5px"></i>Lưu dữ liệu</button>
                    <a href="~/shipper" class="btn btn-default"><i class="fa fa-chevron-left" style="margin-right:5px"></i>Quay lại</a>
                </div>
            </div>
        </form>
    </div>

</div>

