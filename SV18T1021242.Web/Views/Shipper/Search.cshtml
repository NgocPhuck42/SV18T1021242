@model SV18T1021242.Web.Models.ShipperPaginationResult 
@{
    Layout = null;
}

<p style="margin-top:10px">
    Có <b>@Model.RowCount</b> người giao hàng trong tổng số <strong>@Model.PageCount</strong> trang
</p>
<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr class="bg-blue-gradient">
                <th>Tên Người Giao Hàng</th>
                <th>Số điện thoại</th>
                <th style="width: 110px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.ShipperName</td>
                    <td>@item.Phone</td>
                    <td>

                        <a href="~/shipper/edit/@item.ShipperID" class="btn btn-info"><i class="fa fa-edit"></i></a>
                        <a href="~/shipper/delete/@item.ShipperID" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>

            }

        </tbody>
    </table>
</div>
<div class="box-footer">
    <div class="text-center">
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a href="~/shipper">@i</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
                }
            }
        </ul>
    </div>
</div>
