@model SV18T1021242.Web.Models.CustomerPaginationResult
@{
    Layout = null;
}

<p style="margin-top:10px">
    Có <b>@Model.RowCount</b> khách hàng trong tổng số <strong>@Model.PageCount</strong> trang
</p>
<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr class="bg-blue-gradient">
                <th>Tên Khách Hàng</th>
                <th>Tên Giao Dịch</th>
                <th>Địa Chỉ</th>
                <th>Quốc Gia</th>
                <th>Thành Phố</th>
                <th>Mã Bưu Chính</th>
                <th style="width: 110px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.CustomerName</td>
                    <td>@item.ContactName</td>
                    <td>@item.Address</td>
                    <td>@item.Country</td>
                    <td>@item.City</td>
                    <td>@item.PostalCode</td>
                    <td>

                        <a href="~/customer/edit/@item.CustomerID" class="btn btn-info"><i class="fa fa-edit"></i></a>
                        <a href="~/customer/delete/@item.CustomerID" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>

            }

        </tbody>
    </table>
</div>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="~/customer">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }

    </ul>
</div>

