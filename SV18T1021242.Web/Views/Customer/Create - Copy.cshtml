@model SV18T1021242.DomainModel.Customer
@{
    
}

<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/customer/save" method="post">
            <input type="hidden" name="CustomerID" value="@Model.CustomerID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Khách Hàng</label>
                <div class="col-sm-10">
                    @*<input type="text"
                class="form-control"
                id="CustomerName"
                name="CustomerName"
                autofocus value="@Model.CustomerName">*@
                    @Html.TextBoxFor(c => c.CustomerName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => c.CustomerName)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Giao Dịch</label>
                <div class="col-sm-10">
                    @*<input type="text"
                class="form-control"
                id="ContactName"
                name="ContactName" value="@Model.ContactName">*@
                    @Html.TextBoxFor(c => c.ContactName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => c.ContactName)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Địa Chỉ</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(c => c.Address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => c.Address)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Quốc gia</label>
                <div class="col-sm-10">
                    <select class="form-control"
                            id="Country"
                            name="Country">
                        @foreach (var item in SV18T1021242.BusinessLayer.CommonDataService.ListOfCountries())
                        {
                            if (item.CountryName == Model.Country)
                            {
                                <option value="@item.CountryName" selected>@item.CountryName</option>
                            }
                            else
                            {
                                <option value="@item.CountryName">@item.CountryName</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Thành Phố</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(c => c.City, new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => c.City)
                </div>
            </div>
          
            <div class="form-group">
                <label class="control-label col-sm-2">Mã Bưu chính</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(c => c.PostalCode, new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => c.PostalCode);
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10 text-danger">
                    @Html.ValidationSummary()
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save" style="margin-right:5px"></i>Lưu dữ liệu</button>
                    <a href="~/customer" class="btn btn-default"><i class="fa fa-chevron-left" style="margin-right:5px"></i>Quay lại</a>
                </div>
            </div>
        </form>
    </div>

</div>
   








