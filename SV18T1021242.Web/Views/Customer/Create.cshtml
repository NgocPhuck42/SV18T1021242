@model SV18T1021242.DomainModel.Customer
@{

}

<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/customer/save" method="post">
            <input type="hidden" name="CustomerID" value="@Model.CustomerID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Khách Hàng</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.CustomerName, "", new { @style = "color:#ff0000" })
                </div>
                @*<div class="col-sm-10">
                    <input type="text"
                    class="form-control"
                    id="CustomerName"
                    name="CustomerName"
                    autofocus value="@Model.CustomerName">*@
                @*@Html.TextBoxFor(c => c.CustomerName, new { @class = "form-control" })*@
                @*@Html.ValidationMessage("CustomerName", new { @class = "text-danger" })
                    </div>*@
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Giao Dịch</label>
                <div class="col-sm-10">
                    
                    @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control"})
                    @Html.ValidationMessageFor(c => c.ContactName, "", new { @style = "color:#ff0000" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Địa Chỉ</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(c => c.Address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => c.Address, "", new { @style = "color:#ff0000" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Quốc gia</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(c => c.Country, SelectListHelper.Countries(), new { @class = "form-control select2" })
                    @Html.ValidationMessageFor(c => c.Country, "", new { @style = "color:#ff0000" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Thành Phố</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(c => c.City, new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => c.City, "", new { @style = "color:#ff0000" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mã Bưu chính</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(c => c.PostalCode, new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => c.PostalCode, "", new { @style = "color:#ff0000" });
                </div>
            </div>

            @*<div class="form-group">
                <div class="col-lg-offset-2 col-sm-10 text-danger">
                    @Html.ValidationSummary()
                </div>
            </div>*@
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save" style="margin-right:5px"></i>Lưu dữ liệu</button>
                    <a href="~/customer" class="btn btn-default"><i class="fa fa-chevron-left" style="margin-right:5px"></i>Quay lại</a>
                </div>
            </div>
        </form>
    </div>

</div>









